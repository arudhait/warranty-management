@model Warranty.Web.Models.AllocationViewModel

<div class="modal-header bg-light p-3">
    <h5 class="modal-title" id="myModalLabel">
        <i class='fas fa-user font-20'></i> District/State Detail
        <i class="fa fa-close" data-dismiss="modal" style="cursor:pointer;float:right"></i>
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="close-modal"></button>
</div>
<form class="validation-wizard form-horizontal form-material needs-validation" id="DistrictStateForm">
    <div class="modal-body">
       
        <input asp-for="TerritoryAllocationModel.EnggId" type="hidden" id="hidEnggId">
        <input asp-for="TerritoryAllocationModel.CreatedDate" type="hidden" />
        <input asp-for="TerritoryAllocationModel.CreatedBy" type="hidden" />
        <input asp-for="TerritoryAllocationModel.Ip" type="hidden" />
        <input asp-for="TerritoryAllocationModel.EncId" type="hidden" />


        <div class="row">
            <div class="col-xxl-12 mb-3">
                <label asp-for="TerritoryAllocationModel.DistrictId">State Name</label> <span class="text-danger"> *</span>
                <select class="form-select  txtborder text-uppercase req-border" asp-for="TerritoryAllocationModel.DistrictId" required asp-items="Model.DistrictList" id="DistrictId">
                    <option value="">Select District Name</option>
                </select>
                <span class="text-danger" asp-validation-for="TerritoryAllocationModel.DistrictId"></span>
            </div>

            <div class="col-xxl-12 mb-3">
                <label asp-for="TerritoryAllocationModel.StateId">State Name</label> <span class="text-danger"> *</span>
                <select class="form-select  txtborder text-uppercase req-border" asp-for="TerritoryAllocationModel.StateId" required asp-items="Model.StateList" id="StateId">
                    <option value="">Select State</option>
                </select>
                <span class="text-danger" asp-validation-for="TerritoryAllocationModel.StateId"></span>
            </div>
            

        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-success " onclick="Warranty.Allocation.SaveDistrictState()"><i class="ri-save-line"></i> Save</button>
        <button type="button" class="btn btn-danger waves-effect" data-bs-dismiss="modal"><i class="ri-forbid-line"></i> Cancel</button>
    </div>
</form>
