@model Warranty.Common.BussinessEntities.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<style>
    @@media (min-width: 320px) and (max-width: 375px) {
        .col-md-8 {
            padding: 20px;
        }

        .col-md-5 {
            width: 144px;
            padding-left: 10px;
        }

        .col-md-7 {
            width: 128px;
        }

        .imgCaptcha {
            width: 65px;
        }

        .p-4 {
            padding: 0.5rem !important;
        }
    }

    @@media (min-width: 375px) and (max-width: 502px) {

        .col-md-8 {
            padding: 30px;
        }

        .col-md-5 {
            width: 150px;
        }

        .col-md-7 {
            width: 150px;
        }

        .imgCaptcha {
            width: 80px;
        }

        .p-4 {
            padding: 0.5rem !important;
        }

        .auth-page-wrapper .auth-page-content {
            padding-bottom: 0px;
        }
    }

    @@media (min-width: 502px) and (max-width: 770px) {
        .col-md-8 {
            padding: 30px;
        }

        .col-md-5 {
            width: 41.66666667%;
        }

        .col-md-7 {
            width: 58%;
        }

        .imgCaptcha {
            width: 80px;
        }

        .auth-page-wrapper .auth-page-content {
            padding-bottom: 0px;
        }
    }
</style>

<div class="auth-page-wrapper pt-5">
    <!-- auth page bg -->
    <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
        <div class="bg-overlay"></div>

        <div class="shape">
            <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
            </svg>
        </div>
    </div>

    <!-- auth page content -->
    <div class="auth-page-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mt-sm-5 mb-4 text-white-50">
                        <div>
                            <a href="@Url.Action("Index", "Dashboard")" class="d-inline-block auth-logo">
                                <img src="~/assets/images/Warranty.png" alt="" height="70">
                            </a>
                        </div>
                       
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card mt-4">

                        <div class="card-body p-4">
                            <div class="text-center mt-2">
                                <h5 class="text-primary">Welcome Back !</h5>
                                <p class="text-muted">Sign in to continue to Warranty-Management.</p>
                            </div>
                            <div class="p-2 mt-4">
                                <form id="loginform" action="@Url.Action("Index", "Dashboard")">

                                    <div class="mb-3">
                                        <label for="txtUsername" class="form-label">Username</label>
                                        <div class="input-group">
                                            <span class="input-group-text" id="basic-addon1"><i class="ri-user-3-line"></i></span>
                                            <input type="text" id="txtUsername" asp-for="UserName" class="form-control form-floating" placeholder="Enter username" tabindex="1" required>
                                            <div class="invalid-feedback">
                                                <span asp-validation-for="UserName"></span>
                                            </div>
                                            <div class="valid-feedback">
                                                Looks good!
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="float-end">
                                            <a href="@Url.Action("ForgotPassword", "Account")" class="text-muted">Forgot password?</a>
                                        </div>
                                        <label asp-for="UserPassword" for="validationCustomUsername">Password</label>
                                        <div class="input-group auth-pass-inputgroup">
                                            <span class="input-group-text password-addon" id="password-addon" style="cursor:pointer;"><i class="ri-eye-line align-middle toggle-password"></i></span>
                                            <input type="password" asp-for="UserPassword" id="txtPassword" autocomplete="off" class="form-control req-border password-input form-floating" placeholder="Enter New password" id="validationCustomUsername" tabindex="2" require>
                                            <div class="invalid-feedback">
                                                <span asp-validation-for="UserPassword"></span>
                                            </div>
                                            <div class="valid-feedback">
                                                Looks good!
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <label for="CaptchaCode" class="form-label">Captcha</label>
                                        <div class="col-md-7">
                                            <div class="input-group">
                                                <span class="input-group-text" id="basic-addon1"><i class="ri-pencil-line"></i></span>
                                                <input type="text" id="txtCaptcha" class="form-control form-floating" asp-for="CaptchaCode" placeholder="Captcha"
                                                       aria-label="Captcha" aria-describedby="basic-addon1" tabindex="3" required onkeyup="Warranty.Common.isNumber(event)">
                                                <div class="invalid-feedback" id="invalidcaptcha">
                                                    <span asp-validation-for="CaptchaCode"></span>
                                                </div>
                                                <div class="valid-feedback" id="validcaptcha">
                                                    Looks good!
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-5">
                                            <div class="input-group">
                                                <span class="input-group-text" id="basic-addon1" style="cursor:pointer;" onclick="Warranty.Common.RefreshCaptcha()"><i class="ri-refresh-line"></i></span>
                                                <img src="@Model.CaptchaImage" alt="" class="imgCaptcha" height="39" width="99" style="border: solid 1px #ced4da;border-top-right-radius: 0.25rem; border-bottom-right-radius: 0.25rem;" />
                                            </div>
                                        </div>
                                    </div>

                                  
                                    <div class="mt-4">
                                        <button class="btn w-100" style="background-color:#0f2040; color: white;" type="button" tabindex="4" onclick="Warranty.Common.Login()">
                                            <i class="ri-login-circle-line" style="color: white;"></i> &nbsp;Sign In
                                        </button>
                                    </div>

                                </form>
                            </div>
                        </div>
                        <!-- end card body -->
                    </div>
                    <!-- end card -->
                </div>
            </div>
            <!-- end row -->
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="mt-3">
                        <div id="divloginMsg" class="alert alert-danger alert-border-left alert-dismissible fade hide" role="alert">
                            <i class="ri-error-warning-line me-3 align-middle"></i> <span id="lblError"></span>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end container -->
    </div>
    <!-- end auth page content -->
</div>
<!-- end auth-page-wrapper -->
